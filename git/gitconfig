[user]
	email = me@craigfe.io
	name = Craig Ferguson
	signingkey = A5A512AEE54B0C6E

[color]
	ui = true

[alias]
	# General
	pl = pull
	ps = push
	pf = push --force
	co = checkout
	df = diff
	dfc = diff --cached
	dfs = diff --staged
	cl = clone
	f = fetch
	mg = merge
	su = submodule update
	rs = reset
	
	# Logging
	l = "log --graph --all --pretty=format:\"%C(yellow)%h%Creset %Cgreen%an%Creset %s%C(bold blue)%d\""
	loga = "log --oneline --graph --all"
	lg = !"git lg1"
	lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lg3 = log --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --all

	# Status
	s = status -s
	st = status

	# Commit
	c = commit
	cm = commit -m
	cam = commit -a -m
	cne = commit --amend --no-edit

[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX

[rebase]
	autoStash = true

[pull]
	rebase = true

[push]
	default = simple

[commit]
	gpgsign = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
